<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="12.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props" Condition="Exists('$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props')" />
  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
    <ProjectGuid>{BA49B3D7-3DD5-48B9-8173-8B94D726ED83}</ProjectGuid>
    <ProjectTypeGuids>{FAE04EC0-301F-11D3-BF4B-00C04F79EFBC}</ProjectTypeGuids>
    <OutputType>Library</OutputType>
    <AppDesignerFolder>Properties</AppDesignerFolder>
    <RootNamespace>Documentation</RootNamespace>
    <AssemblyName>Documentation</AssemblyName>
    <TargetFrameworkVersion>v4.5</TargetFrameworkVersion>
    <FileAlignment>512</FileAlignment>
	<!-- The following paths define where the DocBook toolchain lives. The defaults assume the standard Akeeba Ltd developer folder layout. -->
	<!-- Path to xsltproc executable, part of the libxml2 toolchain, see http://xmlsoft.org/downloads.html -->
    <XsltProcPath>xsltproc</XsltProcPath>
	<!-- Path to the folder containing the DocBook XSL Stylesheets, see https://sourceforge.net/projects/docbook/files/docbook-xsl/ -->
    <DocBookPath>..\..\buildfiles\bin\dbxsl</DocBookPath>
	<!-- Path to the Apache FOP binary, see https://xmlgraphics.apache.org/fop/ -->
    <FopPath>..\..\buildfiles\bin\fop\fop.bat</FopPath>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <PlatformTarget>AnyCPU</PlatformTarget>
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
    <Optimize>false</Optimize>
    <OutputPath>bin\Debug\</OutputPath>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <PlatformTarget>AnyCPU</PlatformTarget>
    <DebugType>pdbonly</DebugType>
    <Optimize>true</Optimize>
    <OutputPath>bin\Release\</OutputPath>
    <DefineConstants>TRACE</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  <ItemGroup>
    <Content Include="PortableTools.xml" />
  </ItemGroup>
  <Target Name="Build">
	<Exec 
		Command="$(XsltProcPath) --nonet --xinclude --novalid --stringparam body.start.indent 0 --stringparam variablelist.term.break.after 1 --stringparam variablelist.term.separator &quot;&quot; --stringparam variablelist.max.termlength 12 --stringparam section.autolabel 1 --stringparam toc.section.depth 5 --stringparam fop1.extensions 1 --output bin\$(Configuration)\PortableTools.fo $(DocBookPath)\fo\docbook.xsl PortableTools.xml"
	/>
	<Exec
		Command="$(FopPath) -fo bin\$(Configuration)\PortableTools.fo -pdf bin\$(Configuration)\PortableTools.pdf"
	/>
  </Target>
</Project>